<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        style="@style/AppTheme.TextView"
        android:gravity="center"
        android:labelFor="@+id/etVerificationCode"
        android:text="@string/view_text_verification_code_hint" />

    <EditText
        android:id="@+id/etVerificationCode"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:freezesText="true"
        android:inputType="text"
        android:maxLength="8" />

    <Button
        android:id="@+id/btnVerify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:text="@string/btn_text_verify" />

    <TextView
        style="@style/AppTheme.HintTextView"
        android:layout_marginTop="16dp"
        android:text="@string/view_text_not_receiving_sms" />

</LinearLayout>
